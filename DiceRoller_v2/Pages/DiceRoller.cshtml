@page
@model DiceRoller
@{
    ViewData["Title"] = "5e Dice Roller";
}


<div name="playerCharacter-Data" class="page-wrapper" id="playerCharacter-Data">
    <div name="playerCharacter-Class" id="playerCharacter-Class" class="element-wrapper">
        <label for="playerCharacter-class">Select your character's class</label>
        <select name="class-select" class="form-control" id="playerCharacter-class">
            <option value="Bard">Bard</option>
            <option value="Cleric">Cleric</option>
            <option value="Druid">Druid</option>
            <option value="Fighter">Fighter - Eldritch Knight</option>
            <option value="Monk">Monk - Way Of The Four Elements</option>
            <option value="Paladin">Paladin</option>
            <option value="Ranger">Ranger</option>
            <option value="Rogue">Rogue - Arcane Trickster</option>
            <option value="Sorcerer">Sorcerer</option>
            <option value="Warlock">Warlock</option>
            <option value="Wizard">Wizard</option>
        </select>
    </div>

    <div name="playerCharacter-CastingStat" id="playerCharacter-CastingStat" class="element-wrapper">
        <label for="playerCharacter-CASTSTAT" id="CastStatLabel"></label>
        <input type="number" name="select-CASTSTAT" class="form-control" id="playerCharacter-CASTSTAT" min="1" max="24" value="8">
    </div>
    <br /><br />

    <div name="playerCharacter-Level" id="playerCharacter-Level" class="element-wrapper">
        <label for="chacaterLevel-select" id="CharacterLevelLabel">Select character's level</label>
        <select name="select-character-level" class="form-control" id="chacaterLevel-select"></select>
    </div>
    <br />

    <div name="moveToSelectSpell-Button" id="moveToSelectSpell-Button" class="button-wrapper">
        <button id="spellSelect" class="btn btn-primary btn-lg" onclick="CurrentPlayerChacater.calculateCharacter();">Select Spell &raquo;</button>
    </div>
</div>

<div name="lore-Bard-Check" id="lore-Bard-Check" class="page-wrapper">
    <div class="element-wrapper">
        <p><b>Are you a College of Lore Bard?</b></p>
        <input type="radio" name="lore-Check" value="Yes"> Yes<br />
        <input type="radio" name="lore-Check" value="No"> No<br />
    </div>
</div>

